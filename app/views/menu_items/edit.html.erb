<!-- Validation failure messages -->
<% if @menu_item.errors.any? %>
  <% @menu_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Menu Item #<%= @menu_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_menu_item/<%= @menu_item.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dishes_id -->
      <div class="form-group">
        <label for="dishes_id" class="control-label">
          Dishes
        </label>

        <%= select_tag(:dishes_id, options_from_collection_for_select(Dish.all, :id, :name_of_dishes, @menu_item.dishes_id), :class => "form-control") %>
      </div>

      <!-- Label and input for venues_id -->
      <div class="form-group">
        <label for="venues_id" class="control-label">
          Venues
        </label>

        <%= select_tag(:venues_id, options_from_collection_for_select(Venue.all, :id, :name, @menu_item.venues_id), :class => "form-control") %>
      </div>

      <!-- Label and input for favorites_id -->
      <div class="form-group">
        <label for="favorites_id" class="control-label">
          Favorites
        </label>

        <input type="text" id="favorites_id" name="favorites_id" placeholder="Favorites" class="form-control" value="<%= @menu_item.favorites_id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @menu_item.name %>">
      </div>

      <!-- Label and input for calories -->
      <div class="form-group">
        <label for="calories" class="control-label">
          Calories
        </label>

        <input type="text" id="calories" name="calories" placeholder="Calories" class="form-control" value="<%= @menu_item.calories %>">
      </div>

      <button class="btn btn-warning">
        Update Menu Item
      </button>
      or
      <a href="/menu_items/<%= @menu_item.id %>">Cancel</a>
    </form>
  </div>
</div>
